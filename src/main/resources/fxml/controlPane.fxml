<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filip.mp3player.controler.ControlPaneControler">
    <children>
<HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">

            <Button id="prev" fx:id="previousButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
            <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
            <Button id="next" fx:id="nextButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" />
            <Slider fx:id="volumeSlider" HBox.hgrow="NEVER">
         <padding>
            <Insets right="10.0" />
         </padding></Slider>
            <Slider fx:id="progresSlider" HBox.hgrow="ALWAYS">
         <padding>
            <Insets right="10.0" />
         </padding></Slider>
        </HBox>
      <TextField fx:id="messageTextField" alignment="CENTER" editable="false" />
    </children>
</VBox>
